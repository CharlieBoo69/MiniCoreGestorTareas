@model IEnumerable<GestorDeTareas.Models.Tarea>

<h2>Lista de Tareas</h2>

<form method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="fechaInicio">Fecha de Inicio:</label>
            <input type="date" name="fechaInicio" class="form-control" value="@Context.Request.Query["fechaInicio"]" />
        </div>
        <div class="form-group col-md-4">
            <label for="fechaFin">Fecha de Fin:</label>
            <input type="date" name="fechaFin" class="form-control" value="@Context.Request.Query["fechaFin"]" />
        </div>
        <div class="form-group col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a href="@Url.Action("Index", "Tareas")" class="btn btn-secondary">Limpiar</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Fecha de Inicio</th>
            <th>Tiempo Estimado (días)</th>
            <th>Estado</th>
            <th>Proyecto</th>
            <th>Empleado Asignado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.Id</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.FechaInicio.ToString("yyyy-MM-dd")</td>
                <td>@tarea.TiempoEstimado</td>
                <td>@tarea.EstadoActual</td>
                <td>@tarea.Proyecto</td>
                <td>@tarea.EmpleadoAsignado</td>
            </tr>
        }
    </tbody>
</table>
